{
  "compilerOptions": {
    "target": "es6",
    "baseUrl": "./src",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@behavior/*": ["behavior/*"],
      "@controller/*": ["controller/*"], 
      "@core/*": ["core/*"],
      "@entity/*": ["entity/*"],
      "@maps/*": ["maps/*"],
      "@math/*": ["math/*"],
      "@pathfinding/*": ["pathfinding/*"],
      "@physics/*": ["physics/*"],
      "@draw/*": ["draw/*"],
      "@service/*": ["service/*"],
      "@util/*": ["util/*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ]
}